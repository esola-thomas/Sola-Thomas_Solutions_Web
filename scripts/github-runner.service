[Unit]
Description=GitHub Actions Runner
After=network.target

[Service]
Type=simple
User=esolathomas
WorkingDirectory=/home/esolathomas/actions-runner
ExecStart=/home/esolathomas/actions-runner/run.sh
Restart=always
RestartSec=10
KillMode=process
KillSignal=SIGTERM
TimeoutStopSec=90

[Install]
WantedBy=multi-user.target
